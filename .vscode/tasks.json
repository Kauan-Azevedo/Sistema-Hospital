{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe arquivo de build ativo",
            // "command": "C:\\MinGW\\bin\\gcc.exe",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                // "cwd": "${fileDirname}"
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "isDefault": true,
                "kind": "build"
            }
            // "group": "build",
            // "detail": "compilador: C:\\MinGW\\bin\\gcc.exe"
        }
    ]
}
